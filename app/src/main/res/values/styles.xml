<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/ygl_background</item>


    </style>

    <!--<style name="CustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">-->
        <!--<item name="android:button">@mipmap/checkbox_notchecked</item>-->
        <!--<item name="android:checkMark">@mipmap/checkbox_not_checked</item>-->
    <!--</style>-->

    <style name="LoginTheme" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">#FFF</item>

    </style>

    <style name="QuizzTheme" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
