<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical"
    android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/timer_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/questions_counter_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="10dp"
                android:layout_alignParentRight="true"
                android:text="Question 1/40"/>


        </RelativeLayout>



        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:text="1-Qu\'affiche ce programme ?"/>


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            card_view:cardElevation="4sp"
            card_view:cardUseCompatPadding="true"
            >

            <TextView
                android:id="@+id/enonce_text"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:padding="10dp"
                android:text="@string/enonce_exemple" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            card_view:cardElevation="4sp"
            card_view:cardUseCompatPadding="true"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="14dp"
                android:hint="Saisissez votre réponse ici"
                android:background="@android:color/white"/>


        </android.support.v7.widget.CardView>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ygl.com.yglapp.ToggleRadioButton
                android:id="@+id/prop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="int arr[] = new int[]"
                />

            <ygl.com.yglapp.ToggleRadioButton
                android:id="@+id/prop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="float arr[10] = new float[]"
                />

            <ygl.com.yglapp.ToggleRadioButton
                android:id="@+id/prop3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="double[] arr = new double[10]"
                />

            <ygl.com.yglapp.ToggleRadioButton
                android:id="@+id/prop4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aucune des autres réponses"
                />
        </RadioGroup>

        <Button
            android:id="@+id/validate"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="Valider"/>


</LinearLayout>